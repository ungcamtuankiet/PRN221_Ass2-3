    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDesciption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategoryId)
                </td>
                <td>
                    <a asp-page="/Admin/Category/Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a asp-page="/Admin/Category/Details" asp-route-id="@item.CategoryId">Details</a>
                    <a asp-page="/Admin/Category/Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
